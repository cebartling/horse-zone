<div class="container theme-showcase" role="main">
  <div class="row">
    <% unless flash[:alert].nil? %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <strong>Whoa!</strong> <%= flash[:alert] %>
        </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title"><strong>Sign In</strong></h3></div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', role: 'form', novalidate: true}) do |f| %>
              <div class="form-group has-feedback">
                <label class="control-label col-sm-4" for="email">Email address</label>

                <div class="col-sm-8">
                  <input type="email"
                         class="form-control"
                         name="email"
                         id="email"
                         placeholder="joe.smith@example.com"
                         required>
                </div>
              </div>

              <div class="form-group has-feedback">
                <label class="control-label col-sm-4" for="passwordInput">Password</label>

                <div class="col-sm-8">
                  <input type="password"
                         class="form-control"
                         name="password"
                         id="password"
                         placeholder="password"
                         aria-describedby="passwordInputStatus"
                         required>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-4">
                  &nbsp;
                </div>
                <div class="col-sm-8">
                  <button type="submit" class="btn btn-primary btn-default"> Sign in</button>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3"><%= link_to "Don't have an account yet?", new_registration_path(resource_name) %></div>
    <div class="col-md-3 text-right"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
    <div class="col-md-3"></div>
  </div>
</div>

